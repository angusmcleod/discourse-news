<td class='main-link news-item clearfix' colspan="{{titleColSpan}}">
  {{#if topic.rss}}
    {{raw "list/topic-thumbnail" topic=topic thumbnails=topic.image_url opts=thumbnailOpts}}
  {{else}}
    {{raw "list/topic-thumbnail" topic=topic thumbnails=thumbnails category=category opts=thumbnailOpts}}
  {{/if}}

  <div class="topic-title">
    <span class='link-top-line'>
      {{#if topic.rss}}
        <a href="{{topic.url}}" class="title">{{{topic.title}}}</a>
      {{else}}
        {{topic-link topic}}
      {{/if}}
    </span>
  </div>

  <div class="topic-details">
    {{#if topic.rss}}
      {{{topic.description}}}
    {{else}}
      {{raw "list/topic-excerpt" topic=topic}}
    {{/if}}
  </div>


  <div class="topic-gutter">
    {{#if showNewsMeta}}
      {{category-link topic.category}}
      <div class='topic-replies posts-map {{likesHeat}}' title='{{title}}'>
        <a href class='posts-map badge-posts {{likesHeat}}'>{{number topic.replyCount}}</a>
        <span>{{i18n 'replies_lowercase' count=topic.replyCount}}</span>
      </div>
      {{raw "list/topic-actions" likeCount=likeCount topicActions=topicActions}}
    {{/if}}

    <button class="share btn-flat no-text btn-icon"
      data-share-url="{{topic.url}}"
      data-post-number="1">
      {{d-icon 'link'}}
    </button>
  </div>
</td>
